{% extends 'AppBundle::layout.html.twig' %}

{% block body %}
    {{ parent() }}
    <h1 class="titre-principal">Cr√©er un compte</h1>
    <div class="form-connexion">
        {{ form_start(form) }}

        <div class="form-group">
            {{ form_label(form.username, "Nom d'utilisateur :") }}
            {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.email, "Adresse email :") }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.plainPassword, "Mot de passe :") }}
            {{ form_widget(form.plainPassword, {'attr': {'class': 'form-control'}}) }}
        </div>

        {{ form_widget(form.save, {'attr': {'class': 'btn btn-success color-btn'}}) }}

        {{ form_end(form) }}
    </div>
{% endblock %}